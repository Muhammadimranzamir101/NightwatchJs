{
  "src_folders": ["tests"],
  "globals_path": "globals/global_module.js",
  "skip_testcases_on_fail": false,
  "page_objects_path": [
    "pages"
  ],

  "test_settings" : {
    "default": {
      "launch_url": "http://localhost:3000",
      "selenium_host": "127.0.0.1",
      "selenium_port": 4041,
      "silent": true,
      "disable_colors": false,
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "./screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "start_process": true
      },
      "webdriver": {
        "start_process": true,
        "port": 4041,
        "server_path": "node_modules/chromedriver/lib/chromedriver/chromedriver"
      }
    }
  }
}
