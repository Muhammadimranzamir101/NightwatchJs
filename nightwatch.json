
{
    "src_folders": ["tests"],
    "globals_path": "globals/global_module.js",
    "skip_testcases_on_fail": false,
    "page_objects_path": [
        "pages"
    ],
    "screenshots": {
        "enabled": true,
        "path": "./screenshots",
        "on_failure": true,
        "on_error": true
    },
    "test_settings": {
        "default": {
            "desiredCapabilities": {
                "browserName": "chrome",
                "chromeOptions": {
                "args": ["headless","no-sandbox","disable-gpu"]
                }
            },
            "webdriver": {
                "start_process": true,
                "port": 4444,
                "server_path": "node_modules/.bin/chromedriver"
            }
        },
        "test_workers": {
            "enabled": true,
            "workers": "auto"
        },
        "firefox": {
            "desiredCapabilities": {
                "browserName": "firefox",
                "alwaysMatch": {
                    "moz:firefoxOptions": {
                        "args": [
                            "-headless"
                        ]
                    }
                }
            },
            "webdriver": {
                "start_process": true,
                "port": 4446,
                "server_path": "./node_modules/geckodriver/geckodriver.exe"
            }
        },
        "selenium": {
            "default" : {
                "desiredCapabilities": {
                    "browserName": "MicrosoftEdge",
                    "marionette": true,
                    "acceptSslCerts": true
                }
            },

            "webdriver": {
                "start_process": true,
                "port": 9516,
                "server_path": "./node_modules/selenium/lib/runner/selenium-server-standalone-2.20.0.jar"
            }
        }
    }
}
